set (USAblation_INCLUDE_DIR "@USAblation_INCLUDE_DIR@")
set (USAblation_LIBRARY_DIR "@USAblation_LIBRARY_DIR@")
set (USAblation_LIBRARIES   "@USAblation_LIBRARIES@")

# figure out if this file is where it was configured (build tree) or
# not (installed tree)
set (USAblation_CMAKE_CONFIG_FILE "@USAblation_CMAKE_CONFIG_FILE@")
get_filename_component (THIS_FILE_PATH
                        ${CMAKE_CURRENT_LIST_FILE}
                        REALPATH)

if ("${USAblation_CMAKE_CONFIG_FILE}" STREQUAL "${THIS_FILE_PATH}")
  # we're using the build directories
  set (USAblation_SOURCE_DIR "@USAblation_SOURCE_DIR@")
  set (USAblation_INCLUDE_DIR "@USAblation_INCLUDE_DIR@")
  set (USAblation_LIBRARY_DIR "@USAblation_LIBRARY_DIR@")
else ()
  # try to find the install dir, we know the install is using
  # share/USAblation so we can go ../..
  set (RELATIVE_INSTALL_DIR "${THIS_FILE_PATH}/../..")
  get_filename_component (ABSOLUTE_INSTALL_DIR "${RELATIVE_INSTALL_DIR}" ABSOLUTE)
  # set directories using the install dir
  set (USAblation_SOURCE_DIR "${ABSOLUTE_INSTALL_DIR}")
  set (USAblation_INCLUDE_DIR "${ABSOLUTE_INSTALL_DIR}/include")
  set (USAblation_LIBRARY_DIR "${ABSOLUTE_INSTALL_DIR}/lib")
endif ()

set (USAblation_LIBRARIES   "@USAblation_LIBRARIES@")
